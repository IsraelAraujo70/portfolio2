{
  "theme": {
    "colors": {
      "primary": {
        "dark": "#1a202c",
        "background": "#2d3748",
        "surface": "#4a5568"
      },
      "accent": {
        "cyan": "#38d9a9",
        "magenta": "#ff6b9d", 
        "pink": "#f06292",
        "blue": "#4fc3f7",
        "green": "#66bb6a"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#a0aec0",
        "accent": "#38d9a9"
      }
    },
    "typography": {
      "fonts": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
      },
      "sizes": {
        "hero": "3.5rem",
        "h1": "2.5rem",
        "h2": "2rem",
        "h3": "1.5rem",
        "body": "1rem",
        "small": "0.875rem"
      },
      "weights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },
    "spacing": {
      "xs": "0.5rem",
      "sm": "1rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "3rem",
      "2xl": "4rem"
    },
    "borderRadius": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "1rem",
      "xl": "1.5rem"
    },
    "shadows": {
      "card": "0 4px 6px -1px rgba(0, 0, 0, 0.3)",
      "hover": "0 10px 15px -3px rgba(0, 0, 0, 0.4)"
    }
  },
  "components": {
    "card": {
      "background": "rgba(74, 85, 104, 0.8)",
      "border": "2px solid transparent",
      "borderRadius": "lg",
      "padding": "lg",
      "backdropBlur": "sm",
      "gradientBorder": {
        "cyan": "linear-gradient(135deg, #38d9a9, #4fc3f7)",
        "magenta": "linear-gradient(135deg, #ff6b9d, #f06292)", 
        "pink": "linear-gradient(135deg, #f06292, #ff6b9d)",
        "multi": "linear-gradient(135deg, #38d9a9, #4fc3f7, #ff6b9d)"
      }
    },
    "navigation": {
      "sidebar": {
        "width": "4rem",
        "background": "rgba(26, 32, 44, 0.9)",
        "backdropBlur": "md",
        "position": "fixed",
        "height": "100vh"
      },
      "icon": {
        "size": "1.5rem",
        "color": "text.secondary",
        "hoverColor": "accent.cyan",
        "activeColor": "accent.cyan"
      }
    },
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #38d9a9, #4fc3f7)",
        "color": "white",
        "padding": "md sm",
        "borderRadius": "md",
        "fontWeight": "semibold"
      },
      "ghost": {
        "background": "transparent",
        "border": "1px solid rgba(56, 217, 169, 0.3)",
        "color": "accent.cyan",
        "padding": "md sm",
        "borderRadius": "md"
      }
    },
    "loading": {
      "icon": {
        "size": "4rem",
        "color": "accent.cyan",
        "animation": "pulse"
      }
    }
  },
  "animations": {
    "transitions": {
      "fast": "0.15s ease-out",
      "normal": "0.3s ease-out",
      "slow": "0.5s ease-out"
    },
    "effects": {
      "fadeIn": "opacity 0.3s ease-out",
      "slideUp": "transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)",
      "scaleHover": "transform 0.2s ease-out",
      "borderGlow": "box-shadow 0.3s ease-out"
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "0 2rem"
    },
    "grid": {
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      },
      "gap": "lg"
    }
  }
}